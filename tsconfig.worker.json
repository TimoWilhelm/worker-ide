{
	"extends": "./tsconfig.node.json",
	"compilerOptions": {
		"composite": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist/worker",
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.worker.tsbuildinfo",
		"lib": ["ES2024"],
		"paths": {
			"@shared/*": ["./shared/*"]
		},
		"types": ["./worker-configuration.d.ts", "vite/client", "node"]
	},
	"include": ["worker", "shared"],
	"exclude": ["worker/fixtures", "worker/**/*.test.ts", "shared/**/*.test.ts"]
}
